<form>
    <div class="form-row justify-content-center">
        <div class="col-md-4">
            <label for="inputState">Enter the name of your favorite movie, tv show, or book</label>
            <input id="media-name" type="text" class="form-control" placeholder="Name">
        </div>
        <div class="form-group col-md-4">
            <label for="inputState">Type</label>
            <select id="media-type" class="form-control">
                <option selected>Choose...</option>
                <option>Movie</option>
                <option>Tv Show</option>
                <option>Book</option>
            </select>
        </div>
    </div>
    <p class="text-center">You can choose one or more genres:</p>
    <div class="form-row justify-content-center">
         
        <div class="col-md-8" id="genre-choices">

        </div>

    </div>
    <div class=" text-center col-auto">
      <button id="submit" type="submit" class="btn btn-primary mb-2">Submit</button>
    </div>

</form>